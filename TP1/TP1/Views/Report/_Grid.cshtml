@using TP1.Helpers
<table id="products1" class="nav nav-pills nav-justified table table-hover table-striped table-bordered table-condensed" data-bind="visible: displayGrid">
    <thead>
        <tr>
            <th><p>ID</p></th>
            <th>@Html.KnockoutHelperFor("Title", "p")</th>
            <th>@Html.KnockoutHelperFor("ZipCode", "p")</th>
            <th>@Html.KnockoutHelperFor("City", "p")</th>
            <th>@Html.KnockoutHelperFor("DateAdded", "p")</th>
            <th>@Html.KnockoutHelperFor("Action", "p")</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Projects">
        <tr>
            <td data-bind="text: Id"></td>
            <td class="col-md-5" data-bind="text: Title"></td>
            <td class="col-md-1" data-bind="text: ZipCode"></td>
            <td class="col-md-2" data-bind="text: City"></td>
            <td class="col-md-1" data-bind="text: DateAdded"></td>
            <td class="col-md-3" >
                @Html.KnockoutHelperForButton("Edit", "click: $root.edit", "col-md-6 btn-primary btn")
                @Html.KnockoutHelperForButton("Delete", "click: $root.delete", "col-md-6 btn-primary btn")
            </td>
        </tr>
    </tbody>
     <tfoot>
        <tr>
            <td colspan = "6">
                <div class="pagerWrap">
                    <ul class="pager">
                        <li class="pagerFirst" data-bind="click: function(){Grid().selectFirst(Projects);}"><a href="#" data-bind="text: language().First"></a></li>
                        <li class="pagerPrev" data-bind="click: function(){Grid().selectPrevious(Projects);}"><a href="#" data-bind="text: language().Previous"></a></li>
                        <li class="pagerCurrent">
                            @Html.KnockoutHelperFor("NumberOfTotalPages", "span", "", "Grid().searchOptions().pageIndex()", "Grid().totalPages()")
                        </li>
                        <li class="pagerNext" data-bind="click: function(){Grid().selectNext(Projects);}"><a href="#" data-bind="text: language().Next"></a></li>
                        <li class="pagerLast" data-bind="click: function(){Grid().selectLast(Projects);}"><a href="#" data-bind="text: language().Last"></a></li>
                    </ul>   
                </div>
            </td>
        </tr>  
    </tfoot>
</table>