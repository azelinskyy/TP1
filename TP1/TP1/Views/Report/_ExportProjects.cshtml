@using TP1.Helpers
<div class="well-lg">
    @Html.KnockoutHelperFor("ExportTab_ProjectsNumberAndRange", "h3", "", "$root.Grid().totalRows()", " $root.DateFrom()", "$root.DateTo()")
</div>

<table class="table table-hover table-striped table-bordered table-condensed">

    <tr>
        <td class="col-md-3">
            <label for="emails">@Html.KnockoutHelperFor("Email", "p")</label></td>
        <td class="col-md-9">
            <textarea data-bind="value: $root.Emails" title="Emails" name="emails" class="form-control"></textarea></td>
    </tr>
    <tr>
        <td>
            <label for="type">@Html.KnockoutHelperFor("Type", "p")</label></td>
        <td>
            <select class=" form-control" data-bind="options: $root.ExportModels,
    optionsText: 'name',
    value: $root.ExportModel"
                name="type">
            </select></td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.KnockoutHelperForButton("Download", "click: $root.saveAs, disable: $root.Grid().totalRows() == 0", "btn btn-primary col-md-2  col-md-offset-3")
            @Html.KnockoutHelperForButton("Export", "click: $root.export, disable: $root.Grid().totalRows() == 0 || $root.Emails() == ''", "btn btn-primary col-md-2")
            @Html.KnockoutHelperForButton("Cancel", "click: $root.viewProjects", "btn btn-primary col-md-2")
        </td>
    </tr>
</table>
